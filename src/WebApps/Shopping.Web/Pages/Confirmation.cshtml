@page
@model Shopping.Web.Pages.ConfirmationModel
@{
    ViewData["Title"] = "Confirmation";
}

<div class="container contact-container">
    <h1 class="mt-4 mb-3">
        Confirmation
    </h1>
    <hr />
    @if (!string.IsNullOrEmpty(Model.Message))
    {
        <h3>@Model.Message</h3>
    }
    <br />
    <p>If you have any further questions, you can contact us 501-222-2222.</p>
</div>

@section Scripts {
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            // Reset the cart count on order confirmation
            const cartItemCountElement = document.getElementById("cartItemCount");
            if (cartItemCountElement) {
                cartItemCountElement.textContent = "0";
            }

            // Clear session storage cart count
            sessionStorage.setItem("cartItemCount", "0");
        });
    </script>
}
